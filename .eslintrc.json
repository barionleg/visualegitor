{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery"
	],
	"globals": {
		"ve": true,
		"VisualEditorSupportCheck": false,
		"OO": false,
		"unicodeJS": false,
		"RangeFix": false,
		"Papa": false
	},
	"rules": {
		"jquery/no-extend": "error",
		"jquery/no-hide": "error",
		"jquery/no-show": "error",
		"jquery/no-toggle": "error",
		"max-statements-per-line": [ "error", { "max": 1 } ],
		"max-len": "off"
	},
	"plugins": [ "html" ],
	"settings": {
		"html/indent": "+tab",
		"html/report-bad-indent": "error"
	}
}
